<h1>Angular portfolio items </h1>
<%= link_to "Create a New Portfolio", new_portfolio_path %>
<% @angular_portfolio_items.each do |portfolio_item| %>
    <p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
    <p>Subtitle: <%=portfolio_item.subtitle %> </p>
    <p>Body: <%= portfolio_item.body %></p>
    <p><%= image_tag portfolio_item.main_image unless portfolio_item.main_image.nil? %></p>
    <p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
    <%= link_to "Edit", edit_portfolio_path(portfolio_item) %>
    <%= link_to "Delete Portfolio item", portfolio_path(portfolio_item), method: :delete, data: {confirm: "Are you sure to delete this portfolio"} %>
<% end %>